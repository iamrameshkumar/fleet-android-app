<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MapotempoTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorMapoBlue</item>
        <item name="colorPrimaryDark">@color/colorMapoBlueDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.Night" parent="MapotempoTheme.Night">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorMapoBlue</item>
        <item name="colorPrimaryDark">@color/colorMapoBlueDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
