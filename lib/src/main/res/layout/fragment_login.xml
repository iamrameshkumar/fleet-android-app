<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/login_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/colorDarkGrey"
        android:alpha="100"
        android:visibility="gone"
        tools:visibility="visible"
        tools:context="com.mapotempo.lib.login.LoginFragment">

        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/login_text_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_progress"
            android:text="Connection in progress..."
            android:textAlignment="center"
            android:textColor="@color/colorTinyGrey"
            android:textSize="22dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/from_login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context="com.mapotempo.lib.login.LoginFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/logo_horizontal_margin"
            android:layout_marginVertical="@dimen/logo_vertical_margin"
            android:src="@drawable/ic_logo_mapo_hd_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/login_internal_horizontal_margin"
            android:layout_marginVertical="@dimen/login_internal_vertical_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_login_black_24dp"
                android:layout_gravity="center"
                android:tint="@color/colorDarkGrey" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_login"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/login_internal_horizontal_margin"
            android:layout_marginVertical="@dimen/login_internal_vertical_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_lock_black_24dp"
                android:layout_gravity="center"
                android:tint="@color/colorDarkGrey" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <CheckBox
            android:id="@+id/remember_logs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/login_internal_horizontal_margin"
            android:layout_marginVertical="@dimen/login_internal_vertical_margin"
            android:layout_gravity="left"
            android:padding="16dp"
            android:text="@string/remember_me" />

        <Button
            android:id="@+id/login_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/login_internal_horizontal_margin"
            android:layout_marginVertical="@dimen/login_internal_vertical_margin"
            android:background="@drawable/ic_login_shape"
            android:padding="16dp"
            android:text="@string/action_sign_in"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/login_internal_horizontal_margin"
            android:layout_marginVertical="@dimen/login_internal_vertical_margin"
            android:background="@drawable/ic_login_shape"
            android:padding="16dp"
            android:text="@string/action_sign_up"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>
